<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.demo1.mapper.UserMapper">
    <select id="selectById" resultType="mybatis.demo1.entity.User">
        select * from tb_user where id = #{id}
    </select>

    <update id="updateUser" parameterType="mybatis.demo1.entity.User">
        update tb_user
        <set>
            username = #{username},
            password = #{password}
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <insert id="insertUser">
        insert into tb_user (username,password) value (#{username},#{password})
    </insert>

    <delete id="delete">
        delete from tb_user where id = 5
    </delete>


</mapper>