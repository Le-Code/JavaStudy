<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--demo1所创建的bean对象-->
    <bean id="springHelloWorld" class="spring.demo1.SpringHello"></bean>
    <bean id="strutsHello" class="spring.demo1.StrutsHello"></bean>

    <bean id="helloWorldService" class="spring.demo1.HelloWorldService">
        <property name="helloWord" ref="springHelloWorld"></property>
    </bean>

</beans>